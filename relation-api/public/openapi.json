{
    "info": {
        "title": "Liveblog API",
        "description": "API documentation",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:\/\/localhost:8081",
            "description": ""
        }
    ],
    "openapi": "3.0.0",
    "paths": {
        "\/api\/posts\/{id}\/toggle_is_published_post": {
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Toggle post published status",
                "description": "Toggles the published status of a post with the provided ID.",
                "operationId": "b5c3441f2e57a9f57325fe4ad17d0812",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the post to toggle",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Post status toggled successfully",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "null"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid post ID"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "\/api\/auth\/signup": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User registration (sign up)",
                "operationId": "userSignup",
                "requestBody": {
                    "description": "User registration data",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User's email",
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "description": "User's password",
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "\/api\/posts": {
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Create a new post",
                "operationId": "createPost",
                "requestBody": {
                    "description": "Create a new post",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "required": [
                                    "relationId",
                                    "content",
                                    "isPublished"
                                ],
                                "properties": {
                                    "relationId": {
                                        "description": "ID of the related item",
                                        "type": "string",
                                        "example": "12345"
                                    },
                                    "content": {
                                        "description": "Content of the post",
                                        "type": "string",
                                        "example": "This is a sample post."
                                    },
                                    "isPublished": {
                                        "description": "Whether the post is published",
                                        "type": "boolean",
                                        "example": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Post created successfully"
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "\/api\/relations\/{id}\/change_status": {
            "post": {
                "tags": [
                    "Relations"
                ],
                "summary": "Change the status of a relation",
                "operationId": "changeRelationStatus",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the relation to be updated",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Status change data",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "required": [
                                    "status"
                                ],
                                "properties": {
                                    "status": {
                                        "description": "New status of the relation",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Status changed successfully",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "Relation ID",
                                            "type": "string"
                                        },
                                        "status": {
                                            "description": "Updated status",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "404": {
                        "description": "Relation not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "\/api\/relations": {
            "get": {
                "tags": [
                    "Relations"
                ],
                "summary": "Get a list of relations",
                "operationId": "getRelationsList",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of relations per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "filters",
                        "in": "query",
                        "description": "Filters to apply on the relation list",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "name": "sortField",
                        "in": "query",
                        "description": "Field to sort by",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sortDirection",
                        "in": "query",
                        "description": "Sort direction (asc or desc)",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of relations",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "description": "Relation ID",
                                                "type": "string"
                                            },
                                            "title": {
                                                "description": "Relation title",
                                                "type": "string"
                                            },
                                            "status": {
                                                "description": "Relation status",
                                                "type": "string"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid query parameters"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "post": {
                "tags": [
                    "Relations"
                ],
                "summary": "Create a new relation",
                "operationId": "createRelation",
                "requestBody": {
                    "description": "Relation data",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "required": [
                                    "title"
                                ],
                                "properties": {
                                    "title": {
                                        "description": "Title of the relation",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Relation created successfully",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "Relation ID",
                                            "type": "string"
                                        },
                                        "title": {
                                            "description": "Relation title",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "404": {
                        "description": "Relation not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "\/api\/relations\/{id}": {
            "get": {
                "tags": [
                    "Relations"
                ],
                "summary": "Get a relation by ID",
                "operationId": "getRelationById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the relation to be fetched",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved relation",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "Relation ID",
                                            "type": "string"
                                        },
                                        "title": {
                                            "description": "Relation title",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Relation not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "put": {
                "tags": [
                    "Relations"
                ],
                "summary": "Edit an existing relation",
                "operationId": "editRelation",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the relation to be edited",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Edit relation data",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "required": [
                                    "title"
                                ],
                                "properties": {
                                    "title": {
                                        "description": "Title of the relation",
                                        "type": "string",
                                        "example": "Sample Relation Title"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Relation edited successfully"
                    },
                    "400": {
                        "description": "Invalid request data"
                    },
                    "404": {
                        "description": "Relation not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Relations"
                ],
                "summary": "Delete a relation by ID",
                "operationId": "deleteRelation",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the relation to delete",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Relation was deleted successfully"
                    },
                    "404": {
                        "description": "Relation not found"
                    },
                    "422": {
                        "description": "Invalid ID provided"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Authentication"
        },
        {
            "name": "Posts",
            "description": "Operations related to posts"
        },
        {
            "name": "Relations"
        }
    ]
}